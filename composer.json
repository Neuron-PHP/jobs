{
  "name": "neuron-php/jobs",
  "description": "Job scheduler and runner.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Lee Jones",
      "email": "lee@dragonflyrg.com"
    }
  ],
  "require": {
    "ext-curl": "*",
    "ext-json": "*",
    "dragonmantank/cron-expression": "^3.4",
    "neuron-php/cli": "0.8.*",
    "symfony/yaml": "^5.0|^6.0|^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*"
  },
  "autoload": {
    "files": [
      "src/Bootstrap.php",
      "src/Jobs/Queue/helpers.php"
    ],
    "psr-4": {
      "Neuron\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "neuron": {
      "cli-provider": "Neuron\\Jobs\\Cli\\Provider"
    }
  }
}
